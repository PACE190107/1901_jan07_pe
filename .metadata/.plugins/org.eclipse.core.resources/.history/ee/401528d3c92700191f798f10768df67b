package com.revature.dao;

import java.util.List;

import com.revature.models.Request;

public interface RequestDao {
	
	//Read one
	Request getRequestById(int id);
	
	// Read some
	List<Request> getRequestsPendingByEmpId(int id);
	
	// Read some
	List<Request> getRequestsCompleteById(int id);
	
	// Read some
	List<Request> getAllRequestsPending();
		
	// Read some
	List<Request> getAllRequestsComplete();
	
	//Read all
	List<Request> getAllRequests();
	
	// Create
	Request createRequest(Request request);
	
	// Update
	Request updateRequestApprove(Request request);
	
	// Update
	Request updateRequestDeny(Request request);

}
