package data;

import java.util.ArrayList;
import java.util.List;

import models.Employee;
import models.Request;

public class DataSource {
	/**
	 * Used to simulate an RDBMS
	 */
	
	private static final DataSource instance = new DataSource();
	private final List<Employee> employees = new ArrayList<>();
	private final List<Request> requests = new ArrayList<>();
	
	// Restrict exterior instantiation
//	private DataSource() {
//		for (int i = 1; i < 21; i++) 
//			todos.add(new Todo(i, "Title: " + i, "Body: " + i));
//		users.add(new User("william", "Password123!", "william@test.com", "William", "Gentry"));
//	}
	
	public static DataSource getInstance() {
		return instance;
	}
	
	public List<Employee> getEmployeeTable() {
		return employees;
	}
	
	public List<Request> getRequestTable() {
		return requests;
	}
}